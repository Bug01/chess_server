<!-- 角色五子棋接口 AVGobang
	 Utype(1500-1600)
-->
<root>
	<Properties>
	</Properties>

	<BaseMethods>
	</BaseMethods>

	<CellMethods>
		<!--通知下子
			参数1：下子位置x
			参数2：下子位置y
		-->
		<CExs_reqChess>
			<Exposed/>
			<Utype> 1500 </Utype>
			<Arg> UINT8 </Arg>
			<Arg> UINT8 </Arg>
		</CExs_reqChess>

		<!--请求对方同意
        	参数1：请求类型
					1：和棋
					2：悔棋
		-->
		<CExs_reqConsent>
			<Exposed/>
			<Utype> 1501 </Utype>
			<Arg> UINT8 </Arg>
		</CExs_reqConsent>

		<!--请求回应对方是否同意
        	参数1：请求类型
					1：和棋
					2：悔棋
			参数2：是否同意
		-->
		<CExs_reqConsentBack>
			<Exposed/>
			<Utype> 1502 </Utype>
			<Arg> UINT8 </Arg>
			<Arg> BOOL </Arg>
		</CExs_reqConsentBack>

		<!--请求认输-->
		<CExs_reqLose>
			<Exposed/>
		</CExs_reqLose>
	</CellMethods>

	<ClientMethods>
		<!--通知开始游戏-->
		<Exs_onStartGame>
			<Utype> 1550 </Utype>
		</Exs_onStartGame>

		<!--通知当前操作玩家
			参数1：当前回合
			参数2：当然玩家座位号
		-->
		<Exs_tellCurPlayer>
			<Utype> 1551 </Utype>
			<Arg> UINT16 </Arg>
			<Arg> CHAIR_ID </Arg>
		</Exs_tellCurPlayer>

		<!--通知玩家下子
			参数1：下子玩家座位号
			参数2：下子位置x
			参数2：下子位置y
		-->
		<Exs_tellPlayerChess>
			<Utype> 1552 </Utype>
			<Arg> CHAIR_ID </Arg>
			<Arg> UINT8 </Arg>
			<Arg> UINT8 </Arg>
		</Exs_tellPlayerChess>

		<!--通知角色请求同意
			参数1：请求的玩家位置
			参数2：请求类型
					1：和棋
					2：悔棋
		-->
		<Exs_tellPlayerConsent>
			<Utype> 1553 </Utype>
			<Arg> CHAIR_ID </Arg>
			<Arg> UINT8 </Arg>
		</Exs_tellPlayerConsent>

		<!--通知角色回应请求同意
			参数1：回应的玩家位置
			参数2：回应类型
					1：和棋
					2：悔棋
			参数3：是否同意
		-->
		<Exs_tellPlayerConsentBack>
			<Utype> 1554 </Utype>
			<Arg> CHAIR_ID </Arg>
			<Arg> UINT8 </Arg>
			<Arg> BOOL </Arg>
		</Exs_tellPlayerConsentBack>


		<!--通知游戏结束
			参数1：赢家位置
		-->
		<Exs_onEndGame>
			<Utype> 1555 </Utype>
			<Arg> CHAIR_ID </Arg>
		</Exs_onEndGame>

	</ClientMethods>

</root>
